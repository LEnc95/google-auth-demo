# ===========================================
# SAAS TEMPLATE - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values
# This file is for LOCAL DEVELOPMENT ONLY
# Production uses Railway environment variables

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_PRICE_ID=price_your_stripe_price_id_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
# Get these from: https://console.firebase.google.com/
# Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Frontend URL (for production)
FRONTEND_URL=https://your-app-name.vercel.app

# Backend URL (for production)
BACKEND_URL=https://your-app-name-production.up.railway.app

# ===========================================
# OPTIONAL: ADDITIONAL SERVICES
# ===========================================
# Uncomment and configure as needed

# Email Service (SendGrid, Mailgun, etc.)
# EMAIL_API_KEY=your_email_api_key_here
# EMAIL_FROM=noreply@yourdomain.com

# Analytics (Google Analytics, Mixpanel, etc.)
# ANALYTICS_ID=your_analytics_id_here

# Database (if using external DB)
# DATABASE_URL=your_database_url_here

# Redis (for caching)
# REDIS_URL=your_redis_url_here

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Port for local development
PORT=4242

# Debug mode
DEBUG=true

# Log level
LOG_LEVEL=info
